<footer class="px-4 py-8 text-center bg-gray-100 border-t-4 md:p-8 lg:px-0 md:pb-0 lg:text-left border-primary-light">

	<div>

		<div class="container flex-wrap lg:flex">

			<div class="container w-full lg:w-1/3">
				<h3 class="pb-2 mt-6">{{ site.title }}</h3>

				<p>
					{{ function('address_stacked') }}</p>
				<p>
					<a href="mailto:{{options.main_email}}">{{options.main_email}}</a>
				</p>
				
				{% include "_components/social-links.twig" with {
					liClasses: 'text-3xl mr-2',
					ulClasses: 'flex justify-center lg:justify-start lg:justify-left mt-6 lg:mt-4',
					linkClasses: 'text-primary'
				} %}
		
			</div>

			<div class="w-full mb-8 lg:w-2/3">
				<h3 class="pb-2 mt-6">Services</h3>
				
				<ul class="flex flex-wrap w-full">
					{% for item in primaryMenu.items %}
						<li class="{{item.class}} pb-1 pr-6 w-full md:w-auto">
							<a href="{{item.url}}">{{item.name}}</a>
						</li>
					{% endfor %}
				</ul>

				<h3 class="pb-2 mt-6">Navigation</h3>
				
				<ul class="flex flex-wrap justify-start w-full">
					{% for item in secondaryMenu.items %}
						<li class="{{item.class}} pb-1 pr-6 w-full md:w-auto">
							<a href="{{item.url}}" class="w-full lg:w-auto">{{item.name}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div class="w-full p-4 mb-8 lg:w-3/12">
				<a aria-label="Go to homepage" class="flex justify-start w-full pt-6 lg:pt-3 border-primary-light border-t-1" href="{{site.site_url}}">
					<img class="w-full mx-auto lg:mx-0 max-w-40" src="{{options.site_logo.url}}" alt="{{site.title}} Logo"/>
				</a>
			</div>

		</div>

		<div class="container w-full py-4 text-white bg-primary-dark">
			<p>&copy; {{site.title}} {{ 'now' | date('Y') }}. All Rights Reserved. {{site.title}} is a registered company in England. {% if options.registered_number %}. Registered Number: {{options.registered_number}}. {% endif %} {% if options.vat_number %} VAT Number: {{options.vat_number}}.{% endif %}</p>
		</div>

	</div>

</footer>

<a id="back-top" class="fixed bottom-0 right-0 z-50 p-2 -mb-20 text-center transition-all duration-1000 bg-gray-500 opacity-0 rounded-xl hover:bg-gray-600" href="javascript:">
	<span class="text-sm text-black no-underline">
		{{ function('icon', 'angle-up', 'w-8 h-8') }}
		<span class="block text-lg uppercase">Top</span>
	</span>
</a>

<div id="pixel-to-watch"></div>
