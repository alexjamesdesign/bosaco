<div class="{{parentClass}}">
		
	<div class="hidden p-4 bg-secondary-light lg:block">

	{# Desktop primary navigation #}

		<nav id="menu-primary" class="container mt-16 menu " aria-labelledby="primary-navigation">
			<span class="sr-only" id="primary-navigation">Primary Navigation</span>
			<ul class="flex justify-center w-full gap-2 flex-nowrap menu-primary">
				{% for item in primaryMenu.items %}
					<li class="{{item.class}} flex-1">
						<a href="{{item.link}}" class="relative h-full block text-center p-4 hover:text-black focus:text-black {{ item.current ? 'text-secondary-lighter' }}">{{item.name}}</a>
						{% if item.children %}
							<ul class="sub-menu">
								<span>
								{% for child in item.children %}
									<li class="{{child.class}}">
										<a href="{{child.link}}" class="block p-4 text-center text-gray-500 bg-none hover:bg-primary-lightest">{{child.name}}</a>
									</li>
								{% endfor %}
								</span>
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</nav>

	</div>
	
</div>	